<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EnterNumber">


    <TextView
        android:id="@+id/gaana2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bolditalic"
        android:text="gaana"
        android:textAlignment="center"
        android:textColor="#E80A0A"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/Continue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gaana2"
        android:layout_margin="25dp"
        android:layout_marginTop="70dp"
        android:text="Hello Enter Your Mobile number"
        android:textAlignment="center"
        android:textColor="#D8000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/Continue2"
        android:layout_marginHorizontal="40dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="(IN)^ +91 - "
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:drawablePadding="5dp"
            android:drawableEnd="@drawable/ic__01_close"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnHome55"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="55dp"
        android:background="@drawable/red_button"
        android:layout_below="@+id/Continue2"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="100dp"
        android:text="Get OTP"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/BYPro"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHome55"
        android:layout_margin="12dp"
        android:layout_marginTop="70dp"
        android:text="By proceeding you agree to the Terms of "
        android:textAlignment="center"
        android:textColor="#D8000000"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BYPro"
        android:text="Use of Gaana"
        android:textAlignment="center"
        android:textColor="#D8000000"
        android:textSize="14sp" />
</RelativeLayout>