<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AllSongsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sara_bold"
            android:text="Top Picks"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <com.ryan.rv_gallery.GalleryRecyclerView
            android:id="@+id/TopPicksRecycler"
            app:helper="LinearSnapHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.ryan.rv_gallery.GalleryRecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/popular_in_hindi"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sara_bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>